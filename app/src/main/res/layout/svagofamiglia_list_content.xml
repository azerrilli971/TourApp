<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:weightSum="12">

    <ImageView
        android:id="@+id/svagoImmagine"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:src="@drawable/hotelnazioni" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_weight="7"
        android:padding="5dp">

        <TextView
            android:id="@+id/svagoNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome Svago Famiglie"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/svagoVia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Indirizzo"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/svagoOrari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="Orari"


            />

        <TextView
            android:id="@+id/svagoCosto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:layout_marginStart="5dp"
            android:text="Costi"


            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end|center"
        android:layout_weight="1">

        <ImageView
            android:paddingTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:id="@+id/iconaMenuInfo"/>
    </LinearLayout>
</LinearLayout>