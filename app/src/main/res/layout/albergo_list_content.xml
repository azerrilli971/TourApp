<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:weightSum="12">

    <ImageView
        android:id="@+id/hotelImmagine"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:src="@drawable/nicolaus" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:padding="5dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hotelNome"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="5dp"
            android:text="Nome Hotel"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/hotelVia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hotelNome"
            android:layout_marginStart="5dp"
            android:layout_toRightOf="@+id/hotelImmagine"
            android:paddingTop="10dp"
            android:text="Indirizzo"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/hotelCosto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hotelVia"
            android:layout_marginStart="5dp"
            android:layout_toRightOf="@+id/nicolaus"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:text="Costo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="end"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iconaMenuInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:src="@drawable/ic_more_vert_black_24dp" />
    </LinearLayout>

</LinearLayout>