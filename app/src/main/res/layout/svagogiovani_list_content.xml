<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:weightSum="12">

    <ImageView
        android:id="@+id/svagoGImmagine"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@drawable/hotelnazioni"
        android:layout_weight="4"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_weight="7">

        <TextView
            android:id="@+id/svagoGNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome Svago Giovani"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/svagoGVia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Indirizzo"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/svagoGOrari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:layout_marginStart="5dp"
            android:text="Orari"


            />

        <TextView
            android:id="@+id/svagoGCosto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:layout_marginStart="5dp"
            android:text="Orari"


            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="end"
        android:layout_weight="1">

        <ImageView
            android:paddingTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:id="@+id/iconaMenuInfo"/>
    </LinearLayout>
</LinearLayout>